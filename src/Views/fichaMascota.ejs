<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IMascotas - Ficha de <%= mascota.nombre_mascota %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/tw-elements/dist/js/tw-elements.umd.min.js"></script>
  </head>

  <!--Body-->

  <body class="min-h-screen bg-gray-100 font-sans">
    <!--Header-->
    <div class="bg-green-500 shadow-lg p-4">
      <div class="container mx-auto flex">
        <div class="text-white text-2xl font-bold tracking-tight">
          <a href="#" class="hover:text-green-200 transition-colors"
            >Mascotas</a
          >
        </div>
      </div>
    </div>

    <!--Info de mascota-->
    <div class="grid grid-cols-12 gap-6 p-6">
      <!-- info de mascota-->
      <div
        class="col-span-12 md:col-span-10 border border-gray-200 rounded-lg shadow-md"
      >
        <!-- foto-->
        <div class="grid grid-cols-12">
          <!-- div de galeria-->
          <div class="col-span-12 md:col-span-5 md:mr-6 mb-4">
            <h1
              class="text-center text-xl font-bold py-3 bg-gray-100 rounded-t-lg"
            >
              Galería
            </h1>

            <!-- Contenedor que centra verticalmente el carrusel -->
            <div class="flex items-center justify-center min-h-[20rem]">
              <div
                class="p-4 bg-white rounded-lg shadow flex items-center justify-center"
              >
                <div
                  class="relative flex items-center justify-center w-[20rem] max-w-full"
                >
                  <div class="relative w-full h-64">
                    <% if (mascota.gallery && mascota.gallery.length > 0) { %>
                    <% mascota.gallery.forEach((imagen, index) => { %>
                    <div
                      class="carousel-slide absolute inset-0 opacity-0 transition-opacity duration-700 ease-in-out <%= index === 0 ? 'opacity-100 z-10' : 'z-0' %>"
                    >
                      <img
                        src="data:image/jpeg;base64,<%= imagen.url %>"
                        class="w-full h-full object-cover rounded-lg"
                        alt="Imagen <%= index + 1 %> de <%= mascota.nombre_mascota %>"
                      />
                      <% if (imagen.favorite) { %>
                      <div
                        class="absolute top-2 right-2 bg-white p-1 rounded-full shadow"
                      >
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-6 w-6 text-red-500"
                          viewBox="0 0 20 20"
                          fill="currentColor"
                        >
                          <path
                            d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
                          />
                        </svg>
                      </div>
                      <% } %>
                    </div>
                    <% }); %> <% } else { %>
                    <div
                      class="carousel-slide absolute inset-0 opacity-100 z-10"
                    >
                      <div
                        class="w-full h-full bg-gray-200 flex items-center justify-center rounded-lg"
                      >
                        <p class="text-gray-500">No hay imágenes disponibles</p>
                      </div>
                    </div>
                    <% } %> <% if (mascota.gallery && mascota.gallery.length >
                    1) { %>
                    <button
                      id="prevBtn"
                      class="absolute -left-8 top-1/2 -translate-y-1/2 bg-white text-3xl px-4 py-2 rounded-full shadow hover:bg-gray-100"
                    >
                      &#8249;
                    </button>
                    <button
                      id="nextBtn"
                      class="absolute -right-8 top-1/2 -translate-y-1/2 bg-white text-3xl px-4 py-2 rounded-full shadow hover:bg-gray-100"
                    >
                      &#8250;
                    </button>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Div de info gral-->
          <div class="col-span-12 md:col-span-7">
            <h1 class="text-center text-xl font-bold">Información General</h1>

            <h1 class="text-lg">Datos del Propietario</h1>
            <div class="overflow-x-auto">
              <table class="min-w-full border border-gray-200">
                <tbody class="bg-white divide-y divide-gray-200">
                  <tr>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 font-bold text-left"
                    >
                      Nombre
                    </td>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 text-right"
                    >
                      <%= (usuario.us_nombre || '') + ' ' +
                      (usuario.us_apellido_p || '') + ' ' +
                      (usuario.us_apellido_m || '') %>
                    </td>
                  </tr>
                  <tr>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 font-bold text-left"
                    >
                      Telefono
                    </td>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 text-right"
                    >
                      <%= usuario.us_telefono %>
                    </td>
                  </tr>
                  <tr>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 font-bold text-left"
                    >
                      Telefono Fijo
                    </td>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 text-right"
                    >
                      <%= usuario.us_telefono_fijo %>
                    </td>
                  </tr>
                  <tr>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 font-bold text-left"
                    >
                      Email
                    </td>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 text-right"
                    >
                      <%= usuario.us_email %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>

            <hr class="my-2 h-0.5 border-t-0 bg-neutral-100 dark:bg-white/10" />

            <h1 class="text-lg">Datos de la Mascota</h1>
            <div class="overflow-x-auto mb-4">
              <table class="min-w-full border border-gray-200">
                <tbody class="bg-white divide-y divide-gray-200">
                  <tr>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 font-bold text-left"
                    >
                      Nombre
                    </td>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 text-right"
                    >
                      <%= mascota.nombre_mascota %>
                    </td>
                  </tr>
                  <tr>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 font-bold text-left"
                    >
                      Fecha de Nacimiento
                    </td>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 text-right"
                    >
                      <%= mascota.fecha_nacimiento %>
                    </td>
                  </tr>
                  <tr>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 font-bold text-left"
                    >
                      Tipo de Mascota
                    </td>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 text-right"
                    >
                      <%= (mascota.tipo == 1 ? 'Perro' : 'Gato') %>
                    </td>
                  </tr>
                  <tr>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 font-bold text-left"
                    >
                      Raza
                    </td>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 text-right"
                    >
                      <%= mascota.raza %>
                    </td>
                  </tr>
                  <tr>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 font-bold text-left"
                    >
                      Color
                    </td>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 text-right"
                    >
                      <%= mascota.color %>
                    </td>
                  </tr>
                  <tr>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 font-bold text-left"
                    >
                      Temperamento
                    </td>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 text-right"
                    >
                      <%= mascota.temperamento %>
                    </td>
                  </tr>
                  <tr>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 font-bold text-left"
                    >
                      caracteristicas
                    </td>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 text-right"
                    >
                      <%= mascota.caracteristicas %>
                    </td>
                  </tr>
                  <tr>
                    <td
                      class="px-4 py-2 whitespace-nowrap border border-gray-200 font-bold text-left"
                    >
                      Médicas
                    </td>
                    <td
                      class="px-4 py-2 MEDICAS-nowrap border border-gray-200 text-right"
                    >
                      <%= mascota.medicas %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!--QR-->
      <div
        class="col-span-12 md:col-span-2 border border-gray-200 rounded-lg shadow-md flex flex-col"
      >
        <h1 class="text-center text-xl font-bold py-3 bg-gray-100 rounded-t-lg">
          Identificación
        </h1>
        <div
          class="flex-1 flex items-center justify-center p-4 min-h-[16rem] bg-white"
        >
          <!-- Contenedor del QR con tamaño fijo y centrado -->
          <div class="w-40 h-40 flex items-center justify-center rounded">
            <img
              src="<%= mascota.url %>"
              alt="Código QR de la mascota"
              class="max-w-full max-h-full object-contain p-1"
            />
          </div>
        </div>
      </div>
    </div>
  </body>
  <footer>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const slides = document.querySelectorAll(".carousel-slide");
        const prevBtn = document.getElementById("prevBtn");
        const nextBtn = document.getElementById("nextBtn");
        let current = 0;
        let interval;

        function showSlide(index) {
          slides.forEach((slide, i) => {
            if (i === index) {
              slide.classList.add("opacity-100", "z-10");
              slide.classList.remove("opacity-0", "z-0");
            } else {
              slide.classList.remove("opacity-100", "z-10");
              slide.classList.add("opacity-0", "z-0");
            }
          });
        }

        function nextSlide() {
          current = (current + 1) % slides.length;
          showSlide(current);
        }

        function prevSlide() {
          current = (current - 1 + slides.length) % slides.length;
          showSlide(current);
        }

        if (prevBtn && nextBtn) {
          prevBtn.addEventListener("click", () => {
            prevSlide();
            resetAutoplay();
          });

          nextBtn.addEventListener("click", () => {
            nextSlide();
            resetAutoplay();
          });
        }

        function startAutoplay() {
          interval = setInterval(nextSlide, 10000);
        }

        function resetAutoplay() {
          clearInterval(interval);
          startAutoplay();
        }

        if (slides.length > 1) {
          startAutoplay();
        }
      });
    </script>
  </footer>
</html>
